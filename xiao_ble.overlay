&adc {
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;

    // LiPo
    channel@1 {
        reg = <1>;
        zephyr,gain = "ADC_GAIN_1_6"; // [MAX VALUE] * [GAIN] = [REFERENCE]
        zephyr,reference = "ADC_REF_INTERNAL"; // 3.3V Reference (Voltage regulator)
        zephyr,acquisition-time = < ADC_ACQ_TIME(ADC_ACQ_TIME_MICROSECONDS, 40) >;
        // zephyr,acquisition-time = < ADC_ACQ_TIME(ADC_ACQ_TIME_MICROSECONDS, 3) >;
        zephyr,input-positive = <NRF_SAADC_AIN7>; // P0.14
        zephyr,resolution = < 12 >;
        // zephyr,oversampling = < 8 >;
    };
};

&ieee802154 {
	status = "disabled";
};

