/ {
    internal {
        compatible = "gpio-keys";
        read_bat: read_bat {
            gpios = <&gpio0 14 (GPIO_OPEN_DRAIN | GPIO_ACTIVE_LOW)>; // Pull it to ground when set to 1. Default in high impedane mode.
        };
        iset: iset {
            gpios = <&gpio0 13 (GPIO_OPEN_DRAIN | GPIO_ACTIVE_LOW)>; // Pull it to ground when set to 1. Default in high impedane mode.
        };
    };

    zephyr,user {
        io-channels = <&adc 1>;
    };

    aliases {
        read-bat = &read_bat;
        iset = &iset;
    };
};


